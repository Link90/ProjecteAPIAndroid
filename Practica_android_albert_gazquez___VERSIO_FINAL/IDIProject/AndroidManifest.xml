<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sandglassproject"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon1" android:label="@string/app_name">
        <activity android:name=".IDIProjectActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".splash"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.sandglassproject.SPLASH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".menu"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.sandglassproject.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".screen1in"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.sandglassproject.SCREEN1IN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".screendayandhour"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.sandglassproject.SCREENDAYANDHOUR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".displayscrolldata"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog"
		>
            <intent-filter>
                <action android:name="com.sandglassproject.DISPLAYSCROLLDATA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".options"
                  android:label="@string/app_name"
		>
            <intent-filter>
                <action android:name="com.sandglassproject.OPTIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        

    </application>
</manifest>